@model IEnumerable<PlantsRPetsProjeto.Server.Models.Plant>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SustainabilityInfoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GrowthTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WaterFrequency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isGrown)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SustainabilityInfoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GrowthTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WaterFrequency)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isGrown)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PlantId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PlantId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PlantId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
