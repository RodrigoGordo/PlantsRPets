@model IEnumerable<PlantsRPetsProjeto.Server.Models.Metric>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPlants)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WaterSaved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarbonFootprintReduction)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPlants)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WaterSaved)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarbonFootprintReduction)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MetricId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MetricId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MetricId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
